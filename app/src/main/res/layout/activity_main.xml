<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/navList"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#ffeeeeee"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:background="#ffffff"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView5"
            android:src="@drawable/nottslogo2"
            android:layout_above="@+id/btnCreateAccount"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="410dp"
            android:layout_marginTop="15dp" />

        <Button

            android:layout_width="414dp"
            android:layout_height="100dp"
            android:text="Discover"
            android:id="@+id/attractionsbtn"
            android:padding="10dp"
            android:textSize="20dp"
            android:background="#CED046"
            android:layout_above="@+id/btn_Profile"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="-410dp"
            android:layout_marginBottom="1dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:typeface="sans" />

        <Button
            android:layout_width="414dp"
            android:layout_height="100dp"
            android:text="Events"
            android:id="@+id/activitybtn"
            android:padding="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="20dp"
            android:layout_alignRight="@+id/mapbtn"
            android:layout_alignEnd="@+id/mapbtn"
            android:layout_margin="1dp"
            android:background="#CED050"
            android:typeface="sans" />

        <Button
            android:layout_width="414dp"
            android:layout_height="100dp"
            android:text="Attractions"
            android:id="@+id/mapbtn"
            android:padding="10dp"
            android:textSize="20dp"
            android:layout_above="@+id/activitybtn"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="1dp"
            android:background="#CED066"
            android:typeface="sans" />

        <Button
            android:layout_width="414dp"
            android:layout_height="100dp"
            android:text="User Profile"
            android:id="@+id/btn_Profile"
            android:padding="10dp"
            android:textSize="20dp"
            android:background="#CED086"
            android:layout_above="@+id/mapbtn"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_margin="1dp"
            android:layout_alignParentEnd="true"
            android:typeface="sans" />

    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/navList"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#ffeeeeee"/>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="#050600">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/nottslogo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/attractionsbtn"
        android:layout_weight="4.88" />

    <Button

        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Attractions"
        android:id="@+id/attractionsbtn"
        android:layout_weight="0.12"
        android:padding="10dp"
        android:textSize="15dp"
        android:background="#ffffff"
        android:layout_above="@+id/activity_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Settings"
        android:id="@+id/activity_btn"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="15dp"
        android:layout_alignRight="@+id/mapbtn"
        android:layout_alignEnd="@+id/mapbtn"
        android:layout_margin="1dp"
        android:background="#ffffff" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Forums"
        android:id="@+id/mapbtn"
        android:padding="10dp"
        android:textSize="15dp"
        android:layout_above="@+id/activity_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="1dp"
        android:background="#ffffff" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Activities"
        android:id="@+id/activity_btn"
        android:padding="10dp"
        android:textSize="15dp"
        android:background="#ffffff"
        android:layout_above="@+id/mapbtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_margin="1dp"
        android:layout_alignParentEnd="true" />

</LinearLayout>
</ScrollView>
</android.support.v4.widget.DrawerLayout>